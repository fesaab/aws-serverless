{
  "name": "product-handler",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "build:prd": "tsc && gulp",
    "test": "jest --maxWorkers=1 --detectOpenHandles --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.51",
    "@types/jest": "^29.2.3",
    "@types/node": "^13.13.52",
    "@types/uuid": "^8.3.4",
    "aws-sdk": "^2.1254.0",
    "gulp": "^4.0.2",
    "gulp-install": "^1.1.0",
    "jest": "^29.3.1",
    "jest-extended": "^3.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.5"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.210.0",
    "uuid": "^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "maxConcurrency": 1,
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.d.ts",
      "!<rootDir>/*.ts",
      "!<rootDir>/**/index.ts",
      "!<rootDir>/**/*.module.ts",
      "!<rootDir>/config/**/*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/$1"
    }
  }
}
